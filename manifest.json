{
  "id": "com.sosac.stremio",
  "version": "1.0.3",
  "name": "Sosáč + StreamujTV (Raspberry)",
  "description": "Neoficiální Stremio doplněk umožňující přístup k filmům a seriálům z API Sosáče a StreamujTV. Běží na tvém Raspberry Pi přes Tailscale Funnel.",

  "logo": "https://raspberrypi.napoleon-degree.ts.net/icon.png",
  "background": "https://raspberrypi.napoleon-degree.ts.net/fanart.png",

  "contactEmail": "none",

  "catalogs": [
    {
      "type": "movie",
      "id": "sosac-movies",
      "name": "Sosáč – Filmy",
      "extra": [
        { "name": "search", "isRequired": false },
        { "name": "skip",   "isRequired": false }
      ]
    },
    {
      "type": "series",
      "id": "sosac-series",
      "name": "Sosáč – Seriály",
      "extra": [
        { "name": "search", "isRequired": false },
        { "name": "skip",   "isRequired": false }
      ]
    }
  ],

  "resources": [
    "catalog",
    "meta",
    "stream"
  ],

  "types": [
    "movie",
    "series"
  ],

  "idPrefixes": [
    "sosac-movie-",
    "sosac-series-",
    "sosac-episode-"
  ],

  "behaviorHints": {
    "configurable": true,
    "configurationRequired": false
  }
}
